.logoKitUi
  +logoKit()

.contentContainer
  .inputColumn
    .inputItem
      .titleForm 
        h3.titleText Text Field
        p.titleTextGray Default
      +inputCard({
          text: 'Email'
      })


    .inputItem
      .titleForm 
        h3.titleText Text Field
        p.titleTextGray Hover / Focus
      +inputCard({
          text: 'This is pretty awesome',
          modifier: '--active'
      })


    .inputItem
      .titleForm 
        h3.titleText Dropdown
      +dropDown({
          text: 'Сколько гостей'
      })


    .inputItem
      .titleForm 
        h3.titleText masked text field
      +inputCard({
          text: 'ДД.ММ.ГГГГ'
      })


    .dateDropdown 
      .dateWrapper
        .titleForm 
          h3.titleText date Dropdown
        +dropDown({
            text: 'ДД.ММ.ГГГГ'
        })
      .dateWrapper
        .titleForm 
          h3.titleText date Dropdown
        +dropDown({
            text: '19.08.2019'
        })
    .wrapperForm
      .titleForm 
        h3.titleText filter date dropdown
      +dropDown({
          text: '19 авг - 23 авг'
        })
    .wrapperForm
      .titleForm 
        h3.titleText subscription text field
      form.footer__formSend
        +inputCard({
            modifier: "--minWidth",
            text: "Email"})
        input(type="submit" value="")

    .form-elements__small-container.js-form-elements__dropdown-room-close
      .titleForm
        h3.titleText dropdown
        p.titleTextGray Default
      +configuration-dropdown()

    .form-elements__small-container.js-form-elements__dropdown-room-open
      .titleForm
        h3.titleText dropdown
        p.titleTextGray expanded
      +configuration-dropdown()




  .checkColumn
    .checkBoxWrapper
      .titleCheckBox 
        h3.titleText Checkbox Buttons
      .checkBoxItem
        +checkBox({
            text: "Можно курить",
            id: 'check'
        })
      .checkBoxItem
        +checkBox({
            text: "Можно с питомцами",
            checked: true,
            id: 'check2'
        })
      .checkBoxItem
        +checkBox({
            text: "Можно пригласить гостей (до 10 человек)",
            checked: true,
            id: 'check3'
        })

    .radioButtonWrapper
      .titleRadioButton 
        .titleCheckBox
          h3.titleText Radio Buttons
        +radioButton({
          id: 'radio-1',
          text: 'Мужчина',
          checked: true
        })

        +radioButton({
          id: 'radio-2',
          text: 'Женщина'
        })

    .toggleWrapper
      .titleToggle 
        .titleCheckBox
          h3.titleText Toggle
        .toggleCol
          +toggleButton({
            id: 'toggleButton',
            text: 'Получать спецпредложения',
            checked: true 
          })
        .toggleCol
          +toggleButton({
            id: 'toggleButton2',
            text: 'Получать спецпредложения'
          })

    .likeWrapper
      .titleLikeButton 
        .titleCheckBox
          h3.titleText like button
        .likeCol
          +likeButton({
            likes: '2'
          })

          +likeButton({
            likes: '12',
            modifier: true
          })
          
    .rateWrapper
      .titleRate 
        .titleCheckBox
          h3.titleText rate button
        .rateCol
          +rateBtn({
            quantity: "4"
          })
          +rateBtn({
            quantity: "5"
          })
    .form-elements__item.js-form-elements__dropdown-guest-open
      .titleForm
        h3.titleText dropdown
      +configuration-dropdown()




  .buttonColumn
    .sliderWrapper
      +slider({
        text: 'Range Slider'
      })

    .buttonTitle 
      h3.titleText buttons
    .buttonWrapper
      .buttonRow
        .buttonStock
          +buttonGradient({
            text: "CLICK ME"
          })
        .buttonStock
          +buttonGradient({
            text: "CLICK ME",
            hover: true
          })
      .buttonRow
        .buttonStock 
          +buttonGradientBorder({
            text: 'CLICK ME'
          })
        .buttonStock 
          +buttonGradientBorder({
            text: 'CLICK ME',
            modifier: '--hover'
          })

    .linkTextContainer
      +linkText({
        text: 'CLICK ME'
      })

      +linkText({
        text: 'CLICK ME',
        hover: true
      }) 

    .buttonGradientContainer
      +buttonGradient({
            text: "перейти к оплате",
            arrow: true
          })
    
    .paginationTitle
      h3.titleText pagination
    .paginationContainer
      #light-pagination.pagination
      p 1 – 12 из 100+ вариантов аренды

    .form-elements__item.js-form-elements__dropdown-quest-open-many
      .titleForm
        h3.titleText dropdown
      +configuration-dropdown()



