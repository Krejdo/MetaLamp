mixin inputCard(value,name)
    .input-card(class="" + value)
        input(type="text" class="input-card_style" placeholder=name)


mixin payButton(value,text,height)
    .button-gradiend(class="" + value)
         form
             button(class="button-gradiend_style" + " " + height)
                 span=text
                 img(src="../blocks/regCard/arrow_forward.png", alt="")


mixin buttonOut(value,text)
    .button-bg-out
        button(class="button-bg-out_style" + " " + value)
            span=text